# modification du mot de passe :
RewriteRule ^([a-z]+)-modifpw([0-9]+)-([a-zA-Z0-9\-]+)-([a-zA-Z0-9\-]+)\.html$ ./index2.php?p=106&lang=$1&action=$2&login=$3&ctrl=$4 [L]

# telechargement des element virtuels :
RewriteRule ^([a-z]+)-download([0-9]+)-([a-zA-Z0-9\-]+)\.html$ ./index2.php?p=15&lang=$1&bl=$2&pw=$3 [QSA,L]


# juste les pages, non compris le catalogue :
